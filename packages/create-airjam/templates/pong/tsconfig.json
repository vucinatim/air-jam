{
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["ES2022", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "jsx": "react-jsx",
    "strict": true,
    "noEmit": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "@air-jam/sdk": ["../../../sdk/src/index.ts"],
      "@air-jam/sdk/*": ["../../../sdk/src/*"]
    },
    "types": ["node"]
  },
  "include": ["src", "vite.config.ts", "../../../sdk/src/**/*"]
}
